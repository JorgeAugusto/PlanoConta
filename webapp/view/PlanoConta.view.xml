<mvc:View controllerName="br.com.idxtecPlanoConta.controller.PlanoConta"
xmlns:html="http://www.w3.org/1999/xhtml"
xmlns:mvc="sap.ui.core.mvc"
displayBlock="true"
xmlns="sap.m"
xmlns:t="sap.ui.table">
	<App id="app">
		<pages>
			<Page>
				<content>
					<t:Table id="tablePlanoConta"
						rows="{path: '/PlanoContas'}"
						alternateRowColors="true">
						<t:toolbar>
							<Toolbar>
								<Title text="Planos de conta"/>
							</Toolbar>
						</t:toolbar>
						<t:columns>
							<t:Column filterProperty="Codigo" sortProperty="Codigo">
								<Label text="Código"/>
								<t:template>
									<Text text="{Codigo}"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="Descricao" sortProperty="Descricao">
								<Label text="Descrição"/>
								<t:template>
									<Text text="{Descricao}"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="ClasseConta" sortProperty="ClasseConta">
								<Label text="Classe da conta"/>
								<t:template>
									<Text text="{ClasseConta}"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="Condicao" sortProperty="Condicao">
								<Label text="Condição"/>
								<t:template>
									<Text text="{Condicao}"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="Bloqueada" sortProperty="Bloqueada">
								<Label text="Bloqueada"/>
								<t:template>
									<CheckBox selected="{Bloqueada}" enabled="false"/>
								</t:template>
							</t:Column>
						</t:columns>
					</t:Table>
				</content>
				<footer>
					<Toolbar>
						<Button icon="sap-icon://refresh" press="onRefresh"/>
						<ToolbarSpacer/>
						<Button text="Incluir novo" press="onIncluir"/>
						<Button text="Editar" press="onEditar"/>
						<Button text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>